<section class="slice-lg has-bg-cover bg-size-cover" >
  <div class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div class="form-header-icon">
                <i class="fas fa-user-edit"></i>
            </div>
          </div>
          <div class="form-body">
            <div class="text-center px-2">
                <h4 class="heading heading-4 strong-400 mb-4">Edit your profile account</h4>
            </div>

              <%= render 'form_registration'%>
              <h2>Cancel my account</h2>

              <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-styled  btn-base-1 mt-4"  %></p>

              <%= link_to "Back", :back %>
              </div>
            </div>
          </div>
        </div>
      </div>
</section>
