<div class="container d-flex justify-content-center">
<div class="block block--style-3 mt-4 mb-6 z-depth-3">
    <div class="profile-picture profile-picture--style-2">
        <%= image_tag(@user.avatar , alt: 'avatar', height: 100, width: 100, class: 'rounded-circle') if @user.avatar.attached?  %>
        <div class="block-body text-center">
            <span class="d-block heading heading-6 strong-600 mb-0"><%= @user.first_name %> <%= @user.last_name %></span>
            <span class="d-block text-sm strong-500"><%= @user.email %></span>
        </div>
        wrote [<%= @user.thredded_user_detail.posts_count %>] posts !
    </div>

    <hr>
    <p> The Posts on Bibimbapp forum: <br>
        <%= Thredded::ApplicationController.render partial: 'thredded/users/posts', locals: { posts: Thredded.posts_page_view(scope: @user.thredded_posts.order_newest_first.limit(5), current_user: @user) } %>
    </p>
    <hr>
   
    <div class="d-flex">
        <ul>
        <div class="pr-4">
            <i class="fa fa-envelope mr-1"></i>
            <a href="mailto:<%= @user.email %>" class="link link-sm link--style-3">Message</a>
        </div>
        <div class="">
            <i class="fa fa-user-plus mr-1"></i>
                Forum Contributions [<%= @user.thredded_user_detail.posts_count %>]
        </div>
        </ul>
    </div>
</div>
</div>


